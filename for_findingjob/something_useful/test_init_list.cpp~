#include <iostream>
using namespace std;
class A{
public:
  A(){
    cout<<"construct A"<<endl;
  }
  A(const A& a){
    cout<<"copy construct A"<<endl;
  }
};

class B{
public:
  B(const A& _a):a(_a){
    cout<<"construct B"<<endl;
  }
private:
  A a;
};


int main(int argv, char* args[])
{
  A a;
  B b(a);
  return 0;
}
